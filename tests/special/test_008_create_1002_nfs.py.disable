
import pytest
import sys
import os
import time
cwd = str(os.getcwd())
sys.path.append(cwd)
from rest import post


dataset_list = [f'dataset {x}' for x in range(1002)]


@pytest.mark.parametrize('dataset', dataset_list)
def test_06_created_nfs_share_with_(dataset):
    paylaod = {
        "comment": f"nfs {dataset.split()[1]}",
        "paths": [f"/mnt/{pool1}/{dataset}"],
    }
    results = post("/sharing/nfs/", paylaod)
    assert results.status_code == 200, results.text
